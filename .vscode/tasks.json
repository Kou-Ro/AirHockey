{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build",
        "command": "/bin/processing-java",
        "type": "process",
        "args": [
          "--force",
          "--sketch=${workspaceFolder}",
          "--output=${workspaceFolder}/build",
          "--build"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Export",
        "command": "/bin/processing-java",
        "type": "process",
        "args": [
          "--force",
          "--sketch=${workspaceFolder}",
          "--output=${workspaceFolder}/build",
          "--export"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Run",
        "command": "/bin/processing-java",
        "type": "process",
        "args": [
          "--force",
          "--sketch=${workspaceFolder}",
          "--run"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      }
    ]
}
